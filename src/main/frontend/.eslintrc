{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ],
        "sourceType": "module",
        "tsconfigRootDir": "./"
    },
    "env": {
        "browser": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
        "dist",
        "node_modules",
        "examples",
        "scripts",
        "lib",
        "assets",
        "build"
    ],
    "rules": {
        "indent": "off",
        "@typescript-eslint/no-explicit-any": 0,
        "react/jsx-filename-extension": 0,
        "@typescript-eslint/explicit-module-boundary-types": 0,
        "no-console": [
            1,
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-inline-comments": 1,
        "@typescript-eslint/no-unused-vars": "error",
        "no-unused-vars": "off",
        "no-debugger": 1,
        "@typescript-eslint/no-empty-function": [
            2,
            {
                "allow": [
                    "private-constructors"
                ]
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js"
            ],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}